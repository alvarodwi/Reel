<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="Widget.Reel.Card" parent="Widget.MaterialComponents.CardView">
    <item name="android:layout_margin">@dimen/spacing_normal</item>
    <item name="cardCornerRadius">@dimen/spacing_normal</item>
    <item name="cardElevation">@dimen/spacing_small</item>
  </style>

  <style name="Widget.Reel.Card.Selectable" parent="Widget.Reel.Card">
    <item name="android:background">?android:selectableItemBackground</item>
  </style>

  <style name="Widget.Reel.FAB" parent="Widget.MaterialComponents.FloatingActionButton">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:elevation">@dimen/spacing_small</item>
  </style>

  <style name="Widget.Reel.Button" parent="Widget.MaterialComponents.Button">
    <item name="cornerRadius">@dimen/spacing_normal</item>
    <item name="elevation">@dimen/elevation_small</item>
  </style>

  <style name="Widget.Reel.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
    <item name="cornerRadius">@dimen/spacing_normal</item>
    <item name="elevation">@dimen/elevation_small</item>
  </style>

  <style name="Widget.Reel.BottomSheet" parent="Widget.Design.BottomSheet.Modal">
    <item name="android:windowIsFloating">false</item>
    <item name="android:colorBackground">@android:color/transparent</item>
    <item name="android:statusBarColor">@android:color/transparent</item>
  </style>

  <style name="BottomSheetDialogTheme" parent="@style/Theme.MaterialComponents.BottomSheetDialog">
    <item name="android:windowIsFloating">false</item>
    <item name="android:colorBackground">@android:color/transparent</item>
    <item name="android:statusBarColor">@android:color/transparent</item>
  </style>

  <style name="PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

  <style name="Widget.Reel.Toolbar" parent="Widget.MaterialComponents.ActionBar.Surface">
    <item name="android:elevation">@dimen/elevation_small</item>
  </style>
</resources>